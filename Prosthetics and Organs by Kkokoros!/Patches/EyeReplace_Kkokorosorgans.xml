						<eyeGraphicEast>
							<graphicClass>Graphic_Single</graphicClass>
							<texPath>Things/Pawn/Wounds/Eyes/KokuUltraBionicEye_east</texPath>
						</eyeGraphicEast>
						<eyeGraphicScale>0.2</eyeGraphicScale>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>